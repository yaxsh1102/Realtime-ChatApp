{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",  // Add this line
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": ["node"],  // Add this line
    "resolveJsonModule": true,  // Add this line
    "baseUrl": "./",    // Add this line
    "paths": {         // Add this line
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],  // Add this line
  "exclude": ["node_modules"]  // Add this line
}